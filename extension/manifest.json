{
    "manifest_version": 3,
    "name": "ChatGPT UX Navigator (User/System)",
    "version": "0.1.0",
    "description": "Sticky right sidebar to quickly navigate user and system messages in ChatGPT with 3-line previews.",
    "permissions": ["storage"],
    "host_permissions": [
        "https://chatgpt.com/*",
        "https://chat.openai.com/*",
        "http://localhost:8765/*"
    ],
    "background": {
        "service_worker": "background.js"
    },
    "content_scripts": [
        {
            "matches": ["https://chatgpt.com/*", "https://chat.openai.com/*"],
            "js": [
                "content/constants.js",
                "content/messaging.js",
                "content/store.js",
                "content/dom.js",
                "content/scroll.js",
                "content/markdown.js",
                "content/clipboard.js",
                "content/chatInput.js",
                "content/prompts.js",
                "content/model.js",
                "content/newChat.js",
                "content/sidebar.js",
                "content/observer.js",
                "content/activeSection.js",
                "content/streamTap.js",
                "content/bootstrap.js"
            ],
            "css": ["styles.css"],
            "run_at": "document_idle"
        }
    ],
    "web_accessible_resources": [
        {
            "resources": ["content/pageHook.js"],
            "matches": ["https://chatgpt.com/*", "https://chat.openai.com/*"]
        }
    ],
    "options_ui": {
        "page": "options/options.html",
        "open_in_tab": true
    }
}
